{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SAGE",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#important"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.sage",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sage",
          "match": "\\b(let|if|else|for|in|match|ret|as)\\b"
        },
        {
          "name": "keyword.other.sage",
          "match": "@(mod|use|type|fn|spec|refine|test|impl|req|ens|invariant|state|init|ops|decisions|maps|preserves|given|when|then|validates|at_level|property|refines|inferred_req|inferred_ens)"
        },
        {
          "name": "constant.language.sage",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sage",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sage",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.sage",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.sage",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sage",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.sage",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sage",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.sage",
          "match": "(->|=>|<-|==|!=|<=|>=|&&|\\|\\||[+\\-*/%<>=!&|?])"
        }
      ]
    },
    "important": {
      "patterns": [
        {
          "name": "markup.bold.sage",
          "match": "!!"
        },
        {
          "name": "markup.inserted.sage",
          "match": "✓"
        },
        {
          "name": "markup.deleted.sage",
          "match": "✗"
        }
      ]
    }
  },
  "scopeName": "source.sage"
}
